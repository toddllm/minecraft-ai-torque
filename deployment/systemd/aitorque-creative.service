[Unit]
Description=AI Torque Minecraft Server - Creative
After=network.target

[Service]
Type=simple
User=minecraft
Group=minecraft
WorkingDirectory=/opt/minecraft/aitorque-creative
ExecStart=/usr/bin/java -Xmx8G -Xms4G -jar paper-1.21.8.jar --nogui
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/minecraft/aitorque-creative

[Install]
WantedBy=multi-user.target
